{
  "name": "carp-ui",
  "version": "0.0.4",
  "author": "qbadboy",
  "description": "a beautiful ui library",
  "keywords": [
    "vue",
    "vue ui",
    "carp",
    "carpui"
  ],
  "license": "MIT",
  "main": "lib/carp_ui.umd.js",
  "module": "lib/carp_ui.es.js",
  "style": "lib/carp_ui.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/qbadboy/carp-ui.git"
  },
  "homepage": "https://qbadboy.github.io/carp-ui/",
  "bugs": {
    "url": "https://github.com/qbadboy/carp-ui/issues"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lib": "vue-cli-service build --target lib --name carp_ui --dest lib ./src/index.js",
    "lib:es": "rollup --config rollup.config.js",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "build:docs": "vuepress build docs",
    "dev:docs": "vuepress dev docs",
    "deploy:docs": "./bin/docs.deploy.sh"
  },
  "dependencies": {
    "animejs": "^3.0.1",
    "core-js": "^2.6.5",
    "vue": "^2.6.6"
  },
  "peerDependencies": {
    "vue": "^2.6.6"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.0",
    "@vue/cli-plugin-eslint": "^3.5.0",
    "@vue/cli-plugin-unit-jest": "^3.5.0",
    "@vue/cli-service": "^3.5.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.4",
    "postcss-pxtorem": "^4.0.1",
    "prettier": "^1.16.4",
    "rollup": "^1.9.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-stylus-compiler": "^1.0.1",
    "rollup-plugin-vue": "^4.7.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-template-compiler": "^2.5.21",
    "vuepress": "^1.0.0-alpha.47"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "browserslist": [
    "iOS >= 8",
    "Android > 4.0"
  ]
}
